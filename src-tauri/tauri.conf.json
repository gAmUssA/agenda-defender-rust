{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/2.x-beta/tooling/cli/schema.json",
  "identifier": "com.agendadefender.dev",
  "productName": "Agenda Defender",
  "version": "1.0.0",
  "build": {
    "beforeDevCommand": "npm run serve",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../src"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Agenda Defender",
        "width": 800,
        "center": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
